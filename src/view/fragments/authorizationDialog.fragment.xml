<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form">
    <Dialog title="Athorization"
    afterClose="onAfterCloseAuthDialog"
    >

        <f:SimpleForm id="mainWorkCompletedSimpleForm">
            <VBox>
                <Label text="email" labelFor="emailInputId" required="true" id="emailLabelId"/>
                <Input value="{supportModel>/email}" id="emailInputId" />
                <Label text="password" labelFor="passwordInputId" required="true" id="passwordLabelId"/>
                <Input value="{supportModel>/password}" id="passwordInputId" type="Password"/>
            </VBox>
        </f:SimpleForm>
        <buttons>
            <Button id="LogInButton" 
                text="Log In" 
                type="Emphasized" 
                press="onLogInButtonPress"/>
            <Button id="CancelButton" 
                text="Cancel" 
                type="Transparent" 
                press="onCancelButtonPress"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>