<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:table="sap.ui.table">
	<Dialog title="Results of the test" fieldGroupIds="dialogGroup" class="sapUiView">

		<table:Table rows="{/additional}" enableSelectAll="false" selectionMode="None">
			<table:columns>
				<table:Column>
					<Text text="Questions" />
					<table:template>
						<Text text="{questionWord}" />
					</table:template>
				</table:Column>
				<table:Column>
					<Text text="Right Answers" />
					<table:template>
						<List items="{rightAnswersWord}">
							<items>
								<CustomListItem>
									<content>
										<Text text= "{}" />
									</content>
								</CustomListItem>
							</items>
						</List>
					</table:template>
				</table:Column>
				<table:Column>
					<Text text="Your answers" />
					<table:template>
						<List items="{clientAnswersWord}">
							<items>
								<CustomListItem >
									<content>
										<ObjectStatus text="{word}" icon="sap-icon://{= ${isTrueAnswers} ? 'sys-enter-2' : 'error' }" state="{= ${isTrueAnswers} ? 'Success' : 'Error' }" />
									</content>
								</CustomListItem>
							</items>
						</List>
					</table:template>
				</table:Column>
				<table:Column>
					<Text text="Points" />
					<table:template>
						<Text text="{points}"></Text>
					</table:template>
				</table:Column>
			</table:columns>
			<table:footer>
				<Text id="idFooterText" text="Your result: {/additional/totalResult}"/>
			</table:footer>
		</table:Table>
		
		<buttons>
			<Button text="Save results" press="onSaveResults" />
			<Button text="Cancel" press="onCancelFragment" />
		</buttons>
	</Dialog>
</core:FragmentDefinition>