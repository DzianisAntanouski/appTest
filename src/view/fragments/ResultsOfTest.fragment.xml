<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:table="sap.ui.table">
	<Dialog title="Results of the test" class="sapUiView">

		<table:Table rows="{supportModel>/resultsByQuestions}" enableSelectAll="false" selectionMode="None">
			<table:columns>
				<table:Column>
					<Text text="Questions" />
					<table:template>
						<Text text="{supportModel>questionWord}" />
					</table:template>
				</table:Column>
				<table:Column>
					<Text text="Right Answers" />
					<table:template>
						<List items="{supportModel>rightAnswersWord}">
							<items>
								<CustomListItem>
									<content>
										<Text text= "{supportModel>}" />
									</content>
								</CustomListItem>
							</items>
						</List>
					</table:template>
				</table:Column>
				<table:Column>
					<Text text="Your answers" />
					<table:template>
						<List items="{supportModel>clientAnswersWord}">
							<items>
								<CustomListItem >
									<content>
										<ObjectStatus text="{supportModel>word}" icon="sap-icon://{= ${supportModel>isTrueAnswers} ? 'sys-enter-2' : 'error' }" state="{= ${supportModel>isTrueAnswers} ? 'Success' : 'Error' }" />
									</content>
								</CustomListItem>
							</items>
						</List>
					</table:template>
				</table:Column>
				<table:Column>
					<Text text="Points" />
					<table:template>
						<Text text="{supportModel>points}"></Text>
					</table:template>
				</table:Column>
			</table:columns>
			<table:footer>
				<Text id="idFooterText" text="Your result: {supportModel>/currentTotalResult}"/>
			</table:footer>
		</table:Table>
		
		<buttons>
			<Button text="Save results" press="onSaveResults" />
			<Button text="Cancel" press="onCancelFragment" />
		</buttons>
	</Dialog>
</core:FragmentDefinition>