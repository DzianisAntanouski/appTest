<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Popover id="discardPopoverId" 
            placement="Bottom"
            showHeader="false"
            initialFocus="discardPopoverButtonId"
            horizontalScrolling="false"
            afterClose="onAfterPopoverClose">
        <VBox>
            <Text text="Do you want to leave your account?"
                class="sapUiSmallMarginTopBottom sapUiSmallMarginBeginEnd"/>
                <Button id="discardPopoverButtonId" 
                        text="Log Out" 
                        press="handleDiscardPopover" 
                        class="sapUiTinyMarginBottom sapUiTinyMarginBeginEnd"
                        width="94%"
                        />

        </VBox>
    </Popover>
</core:FragmentDefinition>
