<mvc:View
	controllerName="webapp.typescript.controller.Main"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">

	<Page id="wrapper"
		title="Quastions and Answers"
		backgroundDesign= "Solid"
		showNavButton="true"
		navButtonPress=".onNavBack"
		showFooter="{= ${/edit}}">
		<subHeader>
			<OverflowToolbar>
				<ToolbarSpacer/>				
				<Button text="Edit Mode" press=".onPressEdit"/>
				<Button text="Delete" type="Reject" enabled="{= ${/edit}}"/>	
			</OverflowToolbar>
		</subHeader>
		<SplitContainer
			id="SplitContDemo"			
			initialDetail="detail"
			initialMaster="master">
			<detailPages>			
				<Page
					id="detailDetail"
					title="Answers"
					backgroundDesign= "Solid"
					showNavButton="false"
					showFooter="false">
					
					<VBox class="sapUiSmallMargin">
						<Table id="answerstable" items="{answers}" mode="{= ${/edit} ? 'MultiSelect' : 'None'}">
							<infoToolbar>
								<OverflowToolbar>
									<Label text="{question}"/>
								</OverflowToolbar>
							</infoToolbar>
							<columns>
								<Column>
									
								</Column>
							</columns>
							<items>
								<ColumnListItem vAlign="Middle">
									<cells>	
										<HBox >								
											<Text text="{}" visible="{= !${/edit}}" />
											<Input value="{}" visible="{= ${/edit}}" width="500px"/>	
										</HBox>								
									</cells>
								</ColumnListItem>
							</items>
						</Table>
						<Button text="Next" press=".onPressNext"/>
					</VBox>					
				</Page>			
			</detailPages>
			<masterPages>
				<Page
					id="master2"
					title="Questions"
					backgroundDesign= "List"
					showNavButton="false"
					showFooter="{= ${/edit}}">
					<List id="qList" itemPress=".onListItemPress" items="{path: '/questions'}" width="400px">
						<items>
							<!-- <StandardListItem fieldGroupIds="questions" title="{question}" type="Active" highlight="None"/> -->
							<InputListItem type="Active" fieldGroupIds="questions" highlight="None">
								<HBox >
									<Input value="{question}" visible="{= ${/edit}}" width="250px"/>
									<CheckBox visible="{= ${/edit}}"/>
									<Text text="{question}" visible="{= !${/edit}}"/>
								</HBox>
							</InputListItem>						
						</items>
					</List>
					<footer>
						<OverflowToolbar>
							<ToolbarSpacer/>				
								<Button text="Add question" press=".onPressAddQuestion"/>
								<Button text="Cancel" />
						</OverflowToolbar>
					</footer>					
				</Page>
			</masterPages>
		</SplitContainer>
		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>				
					<Button text="Save" />
					<Button text="Cancel" />
			</OverflowToolbar>
		</footer>
	</Page>
</mvc:View>