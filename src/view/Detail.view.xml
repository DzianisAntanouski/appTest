<mvc:View xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" displayBlock="true"  
    controllerName="webapp.typescript.controller.Detail" 	
    height="100%">
	<Page id="detailPage" content="{subCategory}">
		<customHeader>
		<Toolbar >
			<Title text="{categoryName}" />
			<ToolbarSpacer />
			<Button text="Add subcategory" press="addCategory" type="Emphasized"/>
			<Button text="Run {categoryName} test" press="onRunTest" type="Emphasized"/>
		</Toolbar>
	</customHeader>
		<content>
			<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" press="handleDetailPress" header="{name}"
				subheader="{path: 'createdBy', formatter: '.formatter.formatCreatedBy'}"  frameType= "TwoByHalf">
				<TileContent />
			</GenericTile>
		</content>
	</Page>
</mvc:View>